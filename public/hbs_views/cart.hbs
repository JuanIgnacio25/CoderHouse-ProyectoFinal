<body class="bg-info">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse justify-content-md-center" id="navbarNav">
                <a class="navbar-brand" href="#">
                    <img src="https://cdn0.iconfinder.com/data/icons/website-15/512/web-online-05-256.png" alt="Logo"
                        width="40" height="34" class="d-inline-block align-text-top">
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/productos">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/carrito">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/chat">Chat</a>
                    </li>
                    <li>
                        <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="text-center fs-1 fw-bold">Cart</div>
        <div class="container mt-4">
            <div class="row">
                <div class="col">
                    {{#if products}}
                    <table class="table align-middle table-dark table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Category</th>
                                <th scope="col">Description</th>
                                <th scope="col">Thumbnail</th>
                                <th scope="col">Quantity</th>
                                <th scope="col"> </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td>{{this.price}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.description}}</td>
                                <td><img style="width: 40px; height:40px" src={{this.thumbnail}}></td>
                                <td>{{this.quantity}}</td>
                                <td>
                                    <form action="/carrito/delete/{{this.id}}" method="POST">
                                        <input type="submit" value="Remove From Cart"
                                            class="btn btn-info w-100 mt-2 fw-semibold shadow-sm">
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    <h2>No hay productos</h2>
                    {{/if}}
                </div>
            </div>
        </div>
        
        <h2>Total Price ${{this.total_Price}}</h2>

        <form action="/ordenes/buy" method="POST">
            <input type="submit" value="Complete the Purchase">
        </form>

        <hr class="featurette-divider mt-3">

        <footer class="d-flex justify-content-center ">
            <p>© 2023 Juan Ignacio Colli · <a href="https://github.com/JuanIgnacio25" target="_blank"><img
                        src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-social-github-64.png"
                        alt="google-icon" style="height: 1.6rem"></a> · <a
                    href="https://www.linkedin.com/in/juan-ignacio-colli-317696218/" target="_blank"><img
                        src="https://cdn3.iconfinder.com/data/icons/capsocial-round/500/linkedin-64.png"
                        alt="google-icon" style="height: 1.6rem"></a></p>
        </footer>
</body>