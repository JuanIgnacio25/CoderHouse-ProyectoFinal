                    <!--<button type="button" class="btn btn-warning">Sign-up</button>-->
                </div>
            </div>
        </div>
    </header>

    <div class="container py-4">
        <div class="d-flex justify-content-center">
            <h1 class="text-center fs-1 fw-bold">Chat</h1>
        </div>
        <div class="d-flex justify-content-center align-items-center p-2">
            <div class="bg-white p-3 rounded-5 text-dark shadow" style="width:75rem">
                <div class="d-flex flex-row ">
                    <div class="p-3 align-self-center w-100">
                        <form onsubmit="return sendMessage()">

                            <div class="mt-2">
                                <textarea type="text" placeholder="Message" name="message" id="message"
                                    class="form-control bg-light"></textarea>
                                <input type="hidden" id="email" value="{{this.email}}">
                            </div>

                            <div class="d-flex justify-content-center">
                                <input type="submit" class="btn btn-dark w-75 mt-3 fw-semibold shadow-sm"
                                    value="Enviar Mensaje">
                            </div>

                        </form>
                    </div>

                    <div id="messages" class="messages p-2" ></div>
                </div>

            </div>

        </div>

    </div>

