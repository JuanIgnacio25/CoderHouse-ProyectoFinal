<body class="bg-info">
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="https://cdn0.iconfinder.com/data/icons/website-15/512/web-online-05-256.png" alt="Logo"
                        width="40" height="34" class="d-inline-block align-text-top">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/productos" class="nav-link px-2 text-info">eCommerce</a></li>
                    <li><a href="/productos" class="nav-link px-2 text-white">Products</a></li>
                    <li><a href="/carrito" class="nav-link px-2 text-white">Cart</a></li>
                    <li><a href="/chat" class="nav-link px-2 text-white">Chat</a></li>
                </ul>

                <div class="text-end">
                    <a href="/logout" class="btn btn-outline-light me-2">Logout</a>
                    <!--<button type="button" class="btn btn-warning">Sign-up</button>-->
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="text-center fs-1 fw-bold">Products</div>
        <div class="container mt-4">
            <div class="row">
                <div class="col">
                    {{#if products}}
                    <table class="table align-middle table-dark table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Price</th>
                                <th scope="col">Category</th>
                                <th scope="col">Description</th>
                                <th scope="col">Thumbnail</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td>{{this.price}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.description}}</td>
                                <td><img style="width: 40px; height:40px" src={{this.thumbnail}}></td>
                                <td>
                                    <a href="/productos/id_prod/{{this.id}}"
                                        class="btn btn-info w-100 mt-1 fw-semibold shadow-sm">See</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    <h2>No hay productos</h2>
                    {{/if}}
                </div>
            </div>
        </div>

        <div>
            {{#if isAdmin}}
            <h1>Add Product</h1>
            <form action="/productos/" method="POST">
                <input placeholder="Title" type="text" name="title" required>
                <input placeholder="Price" type="number" step="0.01" name="price" required>
                <input placeholder="Category" type="text" name="category" required>
                <input placeholder="Descrption" type="text" name="description" required>
                <input placeholder="Thumbnail" type="text" name="thumbnail" required>
                <input type="submit" value="Add Product">
            </form>
            {{/if}}
        </div>

        <hr class="featurette-divider mt-3">
    </div>

    <footer class="d-flex justify-content-center ">
        <p>© 2023 Juan Ignacio Colli · <a href="https://github.com/JuanIgnacio25" target="_blank"><img
                    src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-social-github-64.png"
                    alt="google-icon" style="height: 1.6rem"></a> · <a
                href="https://www.linkedin.com/in/juan-ignacio-colli-317696218/" target="_blank"><img
                    src="https://cdn3.iconfinder.com/data/icons/capsocial-round/500/linkedin-64.png" alt="google-icon"
                    style="height: 1.6rem"></a></p>
    </footer>


</body>