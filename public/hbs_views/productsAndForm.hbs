<body class="bg-info">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container-fluid">

            <div class="collapse navbar-collapse justify-content-md-center " id="navbarNav">
                <a class="navbar-brand" href="#">
                    <img src="https://cdn0.iconfinder.com/data/icons/website-15/512/web-online-05-256.png" alt="Logo"
                        width="40" height="34" class="d-inline-block align-text-top">
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/productos">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/carrito">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/chat">Chat</a>
                    </li>
                    <li>
                        <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>Products</h1>
        <div>
            {{#if products}}
            <table>
                <thead>
                    <th>title</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Thumbnail</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.description}}</td>
                        <td><img style="width: 50px; height:50px" src={{this.thumbnail}}></td>
                        <td>
                            <form action="/carrito/{{this.id}}" method="POST">
                                <input type="number" name="quantity" placeholder="Items Quantity">
                                <input type="submit" value="Add To Cart">
                            </form>
                        </td>
                        <td>
                            <form action="/productos/delete/{{this.id}}" method="POST">
                                <input type="submit" value="Delete Product">
                            </form>
                        </td>
                        <td>
                            <form action="/productos/put/{{this.id}}" method="GET">
                                <input type="submit" value="Update Product">
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <h2>No hay productos</h2>
            {{/if}}
        </div>

        <div>
            {{#if isAdmin}}
            <h1>Add Product</h1>
            <form action="/productos/" method="POST">
                <input placeholder="Title" type="text" name="title" required>
                <input placeholder="Price" type="number" step="0.01" name="price" required>
                <input placeholder="Category" type="text" name="category" required>
                <input placeholder="Descrption" type="text" name="description" required>
                <input placeholder="Thumbnail" type="text" name="thumbnail" required>
                <input type="submit" value="Add Product">
            </form>
            {{/if}}
        </div>

        <hr class="featurette-divider mt-3">
    </div>

    <footer class="d-flex justify-content-center ">
        <p>© 2023 Juan Ignacio Colli · <a href="https://github.com/JuanIgnacio25" target="_blank"><img
                    src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-social-github-64.png"
                    alt="google-icon" style="height: 1.6rem"></a> · <a
                href="https://www.linkedin.com/in/juan-ignacio-colli-317696218/" target="_blank"><img
                    src="https://cdn3.iconfinder.com/data/icons/capsocial-round/500/linkedin-64.png" alt="google-icon"
                    style="height: 1.6rem"></a></p>
    </footer>


</body>