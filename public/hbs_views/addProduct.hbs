<body class="bg-info">
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="https://cdn0.iconfinder.com/data/icons/website-15/512/web-online-05-256.png" alt="Logo"
                        width="40" height="34" class="d-inline-block align-text-top">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/productos" class="nav-link px-2 text-info">Ecommerce</a></li>
                    <li><a href="/productos" class="nav-link px-2 text-white">Products</a></li>
                    <li><a href="/carrito" class="nav-link px-2 text-white">Cart</a></li>
                    <li><a href="/chat" class="nav-link px-2 text-white">Chat</a></li>
                </ul>

                <div class="text-end">
                    <a href="/logout" class="btn btn-outline-light me-2">Logout</a>
                    <!--<button type="button" class="btn btn-warning">Sign-up</button>-->
                </div>
            </div>
        </div>
    </header>

    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="bg-white p-5 rounded-5 text-dark shadow" style="width:35rem">

            <div class="text-center fs-1 fw-bold">Create Product</div>
            <form action="/productos/" method="POST">
                <!-- Title input -->
                <div class="input-group mt-4">
                    <div class="input-group-text bg-info">
                        <img src="https://cdn3.iconfinder.com/data/icons/seo-and-marketing-4-12/48/184-256.png"
                            alt="title-icon" style="height:  1.5rem">
                    </div>
                    <input class="form-control bg-light" type="text" placeholder="Title" name="title" />
                </div>

                
                <div class="input-group mt-2">
                    <div class="input-group-text bg-info">
                        <img src="https://cdn2.iconfinder.com/data/icons/picol-vector/32/image_add-256.png"
                            alt="thumbnail-icon" style="height:  1.5rem">
                    </div>
                    <input type="text" placeholder="Thumbnail" name="thumbnail" class="form-control bg-light" />
                </div>

                <div class="input-group mt-2">
                    <div class="input-group-text bg-info">
                        <img src="https://cdn2.iconfinder.com/data/icons/money-coin-finance-solid-style/91/Money_Coin_Finance_b01-256.png"
                            alt="price-icon" style="height:  1.5rem">
                    </div>
                    <input type="text" placeholder="Price" name="price" class="form-control bg-light" />
                </div>

                <div class="input-group mt-2">
                    <div class="input-group-text bg-info">
                        <img src="https://cdn2.iconfinder.com/data/icons/boxicons-solid-vol-1/24/bxs-category-256.png"
                            alt="category-icon" style="height:  1.5rem">
                    </div>
                    <select class="form-select bg-light" name="category" type="text">
                        <option selected="">Category</option>
                        <option value="Computation">Computation</option>
                        <option value="Bazar">Bazar</option>
                        <option value="Varios">Varios</option>
                    </select>
                </div>

                <div class="input-group mt-2">
                    <div class="input-group-text bg-info">
                        <img src="https://cdn3.iconfinder.com/data/icons/google-material-design-icons/48/ic_description_48px-256.png"
                            alt="description-icon" style="height:  1.5rem">
                    </div>
                    <textarea type="text" placeholder="Description" name="description"
                        class="form-control bg-light"></textarea>

                </div>

                <!-- Submit button -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-info w-50 mt-3 fw-semibold shadow-sm">Create</button>
                </div>

            </form>
        </div>
    </div>


    <hr class="featurette-divider mt-3">

